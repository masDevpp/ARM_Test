MEMORY {
    ROM (RX) : ORIGIN = 0x0, LENGTH = 64K
    RAM (W)  : ORIGIN = 0x10000, LENGTH = 1M
}

SECTIONS {
    .startup : { startup.o }
    
    .text   : { *(.text) }
    .rodata : { *(.rodata) }
    
    rodata_end = .;

    /* rodata_end as LMA, RAM as VMA */
    .data   : AT(rodata_end) { *(.data) } > RAM
    .bss    : { *(.bss) } > RAM

    _data_load_source = LOADADDR(.data);
    _data_load_size = SIZEOF(.data);
    _data_load_destinatin = ADDR(.data);
}